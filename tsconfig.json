{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@error/*": [
        "./src/error/*"
      ],
      "@integration/*": [
        "./src/integration/*"
      ],
      "@module/*": [
        "./src/module/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
